<div class="ui stackable centered grid">
  <div class="five wide column">
    <h3 class="ui center aligned inverted header"><%= t('.header') %></h3>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui inverted form' }) do |f| %>
      <%= render 'shared/error_messages', object: resource %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, required: true %>
      </div>
      <div class="field">
        <%= f.submit t('.reset'), class: 'ui fluid submit green button' %>
      </div>
    <% end %>
  </div>
</div>
<div class="devise-links">
  <%= render 'devise/shared/links' %>
</div>