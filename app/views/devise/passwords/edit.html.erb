<div class="ui stackable centered grid">
  <div class="five wide column">
    <h3 class="ui center aligned inverted header"><%= t('.header') %></h3>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'ui inverted form' }) do |f| %>
      <%= render 'shared/error_messages', object: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="required field">
        <%= f.label :password, t('.new_password') %> (<%= @minimum_password_length %> min.)
        <%= f.password_field :password, autofocus: true, autocomplete: 'off', required: true %>
      </div>
      <div class="required field">
        <%= f.label :password_confirmation, t('.confirm_new_password') %>
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: 'off', required: true %>
      </div>
      <div class="field">
        <%= f.submit t('.change'), class: 'ui fluid submit green button' %>
      </div>
    <% end %>
  </div>
</div>
<div class="devise-links">
  <%= render 'devise/shared/links' %>
</div>