<div class="ui stackable centered grid">
  <div class="five wide column">
    <h3 class="ui center aligned inverted header"><%= t('.header') %></h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui inverted form' }) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, required: true %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'off', required: true %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="inline field">
          <div class="ui checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end -%>
      <div class="field">
        <%= f.submit t('.login'), class: 'ui fluid submit green button' %>
      </div>
    <% end %>
  </div>
</div>
<div class="devise-links">
  <%= render 'devise/shared/links' %>
</div>